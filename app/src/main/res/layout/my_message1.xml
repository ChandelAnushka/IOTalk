<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayoutMyMessage1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingVertical="10dp"
    android:paddingLeft="60dp"
    android:paddingRight="15dp">

    <LinearLayout
        android:id="@+id/LinearLayoutMyMessage1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/my_message1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/messagebodyMyMessage1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:fontFamily="@font/chivoregular"
            android:padding="10dp"
            android:text="Placeholder message"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/linearLayout2MyMessage2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewStarMyMessage1"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/starstarredmessagesicon" />

            <TextView
                android:id="@+id/textViewTimeMyMessage1"
                android:layout_width="73dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:fontFamily="@font/chivoregular"
                android:gravity="right"
                android:text="time"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

