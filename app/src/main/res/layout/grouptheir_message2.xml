<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayoutGroupMessage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingVertical="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="60dp">

    <LinearLayout
        android:id="@+id/linearLayout1GroupMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/their_message1"
        android:orientation="horizontal">

        <View
            android:id="@+id/viewColourGroupMessage"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#7589F5" />

        <LinearLayout
            android:id="@+id/linearLayout2GroupMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameGroupMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/chivoregular"
                android:paddingBottom="4dp"
                android:text="sender"
                android:textColor="#7589F5" />

            <TextView
                android:id="@+id/messagebodyGroupMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:fontFamily="@font/chivoregular"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:text="message"
                android:textColor="#424240"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/linearLayout3GroupMessage"
                android:layout_width="167dp"
                android:layout_height="match_parent"
                android:layout_marginStart="150dp"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewStarGroupMessage"
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/starstarredmessagesicon" />

                <TextView
                    android:id="@+id/textViewTimeGroupMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="7dp"
                    android:layout_marginBottom="3dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/chivoregular"
                    android:gravity="right"
                    android:text="time"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
