<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayoutTheirMessage2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingVertical="10dp"
    android:paddingLeft="60dp"
    android:paddingRight="15dp">

    <LinearLayout
        android:id="@+id/linearLayoutTheirMessage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@drawable/their_message2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/messagebodyTheirMessage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:fontFamily="@font/chivoregular"
            android:padding="10dp"
            android:text="Placeholder message"
            android:textColor="#424040"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/linearLayout2TheirMessage2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewStarTheirMessage2"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/starstarredmessagesicon" />

            <TextView
                android:id="@+id/textViewTimeTheirMessage2"
                android:layout_width="73dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:fontFamily="@font/chivoregular"
                android:gravity="right"
                android:text="time"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

