<?xml version="1.0" encoding="UTF-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutUserAccountInfo"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/linearLayout1ChatScreen"
        android:layout_width="417dp"
        android:layout_height="732dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.785"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/linearLayout2ChatScreen"
            android:layout_width="match_parent"
            android:layout_height="121dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="3dp"
            android:background="@drawable/gradient_profileinfo"
            android:orientation="vertical"
            android:textColor="#FFFFFF"
            android:textSize="30sp">

            <LinearLayout
                android:id="@+id/linearLayout3ChatScreen"
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewIOTalkChatScreen"
                    android:layout_width="356dp"
                    android:layout_height="43dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/fashionfetishbold"
                    android:gravity="center_vertical"
                    android:text="IOTalk"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/viewSearchChatScreen"
                    android:layout_width="115dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/searchiconchatscreen" />

                <ImageView
                    android:id="@+id/viewSettingsChatScreen"
                    android:layout_width="115dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/settingschatscreen" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4ChatScreen"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/chatsChatScreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/chivoregular"
                    android:gravity="center"
                    android:text="Chats"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/archivesChatScreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/chivoregular"
                    android:gravity="center"
                    android:text="Archives"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/codeChatScreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/chivoregular"
                    android:gravity="center"
                    android:text="Code"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout5ChatScreen"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:orientation="horizontal">

                <View
                    android:id="@+id/viewChatsChatScreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="#E6C7F9"
                    android:fontFamily="@font/chivoregular"
                    android:gravity="center"
                    android:textColor="#E6C7F9"
                    android:textSize="18sp" />

                <View
                    android:id="@+id/viewArchivesChatScreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#E6C7F9"
                    android:fontFamily="@font/chivoregular"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:visibility="invisible" />

                <View
                    android:id="@+id/viewCodeChatScreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="1"
                    android:background="#E6C7F9"
                    android:fontFamily="@font/chivoregular"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewChatScreen"
            android:layout_width="match_parent"
            android:layout_height="504dp"
            android:layout_marginTop="10dp" />

        <ImageView
            android:id="@+id/addChatChatScreen"
            android:layout_width="59dp"
            android:layout_height="59dp"
            android:layout_marginStart="340dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/chatroomchatscreen"
            tools:layout_editor_absoluteY="613dp" />

        <LinearLayout
            android:id="@+id/linearLayout6ChatScreen"
            android:layout_width="200dp"
            android:layout_height="167dp"
            android:layout_marginStart="213dp"
            android:layout_marginTop="-715dp"
            android:background="@drawable/settingspopupborder"
            android:orientation="vertical">

            <TextView
                android:id="@+id/newGroupChatScreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:fontFamily="@font/chivoregular"
                android:text="New Group"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/starredMessagesChatScreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:fontFamily="@font/chivoregular"
                android:text="Starred Messages"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/settingsChatScreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/chivoregular"
                android:text="Settings "
                android:textColor="#000000"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>