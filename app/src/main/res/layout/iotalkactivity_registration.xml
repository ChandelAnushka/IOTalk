<?xml version="1.0" encoding="UTF-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutRegistrationFailed"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/linearLayoutRegistrationFailed"
        android:layout_width="359dp"
        android:layout_height="732dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/viewRegistrationFailed"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginStart="130dp"
            android:layout_marginTop="55dp"
            android:background="@drawable/gradient_signin"
            android:src="@drawable/checkmarksignin"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="16dp" />


        <TextView
            android:id="@+id/textViewRegistrationRegistrationFailed"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/fashionfetishbold"
            android:gravity="center"
            android:text="Registration"
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textViewOtpFailedRegistrationFailed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/chivoregular"
            android:gravity="center"
            android:text="OTP verification failed!"
            android:textColor="#FF0000"
            android:textSize="24sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textViewEnterRegistrationFailed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/chivoregular"
            android:gravity="center"
            android:text="Enter your mobile number we will send you OTP to register account or simply login to your existing account. "
            android:textColor="#000000"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/linearLayout2RegistrationFailed"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bordermobileno"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/viewCountryFlagRegistrationFailed"
                android:layout_width="2dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:background="@drawable/countryflagsignin"
                android:visibility="visible" />


            <EditText
                android:id="@+id/editTextPhoneNoRegistrationFailed"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/chivoregular"
                android:inputType="textPersonName" />

        </LinearLayout>

        <TextView
            android:id="@+id/textViewContinueRegistrationFailed"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/gradient_signin2"
            android:fontFamily="@font/chivoregular"
            android:gravity="center"
            android:text="Continue "
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/fashionfetishbold"
            android:gravity="center"
            android:text="OR"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/viewLoginSignIn"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/gradient_signin2"
            android:fontFamily="@font/chivoregular"
            android:gravity="center"
            android:text="Login"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>