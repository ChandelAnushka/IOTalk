<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/StarredMessagesConstraintLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="7dp"
    android:background="#F1F1F1"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="-20dp"
    android:paddingRight="16dp"
    android:paddingBottom="-10dp">


    <LinearLayout
        android:id="@+id/StarredMessagesLinearLayout1"
        android:layout_width="381dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/StarredMessagesLinearLayout2"
            android:layout_width="445dp"
            android:layout_height="53dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <View
                android:id="@+id/StarredMessagesProfilePic"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/roundprofilepiccontact"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/linearLayoutFollowerInfo"
                app:layout_constraintHorizontal_bias="0.005"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />


            <TextView
                android:id="@+id/StarredMessagesMessageSender"
                android:layout_width="107dp"
                android:layout_height="28dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:fontFamily="@font/chivoregular"
                android:gravity="left"
                android:text="Sender"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.933"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/imageViewArrowStarredMessages"
                android:layout_width="37dp"
                android:layout_height="28dp"
                android:layout_marginStart="-27dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/rightarrowicon" />

            <TextView
                android:id="@+id/StarredMessagesMessageReceiver"
                android:layout_width="40dp"
                android:layout_height="28dp"
                android:layout_marginStart="-20dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/chivoregular"
                android:text="Receiver"
                android:textColor="#000000"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/StarredMessagesLinearLayout3"
                android:layout_width="151dp"
                android:layout_height="28dp"
                android:layout_gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/StarredMessagesDatetextView"
                    android:layout_width="41dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/chivoregular"
                    android:text="Date"
                    android:textColor="#000000"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/StarredMessagesForwardimageView"
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="-200dp"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/forwardarrowicon" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/StarredMessagesLinearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/chatlistbackground"
            android:orientation="vertical"
            android:paddingEnd="0dp">

            <TextView
                android:id="@+id/StarredMessagesMessagetextView"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/chivoregular"
                android:text="Multiple line messages here! "
                android:textColor="#000000"
                android:textSize="17sp" />

            <LinearLayout
                android:id="@+id/StarredMessagesLinearLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/StarredMessagesStarimageView"
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:layout_marginStart="270dp"
                    android:layout_marginBottom="6dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/starstarredmessagesicon" />

                <TextView
                    android:id="@+id/StarredMessagesTimetextView"
                    android:layout_width="59dp"
                    android:layout_height="19dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/chivoregular"
                    android:gravity="right"
                    android:text="Time"
                    android:textColor="#000000"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
