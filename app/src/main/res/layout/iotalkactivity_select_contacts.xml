<?xml version="1.0" encoding="UTF-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutSelectContacts"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout1SelectContacts"
        android:layout_width="415dp"
        android:layout_height="735dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout2SelectContacts"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginEnd="3dp"
            android:background="@drawable/gradient_profileinfo"
            android:orientation="horizontal"
            android:textColor="#FFFFFF"
            android:textSize="30sp">

            <TextView
                android:id="@+id/textViewSelectContacts"
                android:layout_width="356dp"
                android:layout_height="43dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/fashionfetishbold"
                android:gravity="center_vertical"
                android:text="Select Contacts"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/viewSearchSelectContacts"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/searchiconchatscreen" />

            <ImageView
                android:id="@+id/viewSettingsSelectContacts"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/settingschatscreen" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewSelectContacts"
            android:layout_width="match_parent"
            android:layout_height="503dp"
            android:layout_marginTop="0dp" />

        <ImageView
            android:id="@+id/viewSelectContacts"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginStart="310dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/gradient_signin"
            android:src="@drawable/checkmarksignin"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="16dp" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>