<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <corners android:radius="1dp" />
                    <gradient
                        android:startColor="#D1A3EE"
                        android:centerColor="#D1A3EE"
                        android:endColor="#D1A3EE"
                        android:angle="270" />
                    <size
                        android:width="7dp"
                        android:height="7dp" />
                </shape>
            </item>

            <item
                android:width="2dp"
                android:height="0.3dp"
                android:top="4dp"
                android:left="1dp">
                <rotate
                    android:fromDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="#fff"/>
                    </shape>
                </rotate>
            </item>

            <item
                android:width="4dp"
                android:height="0.3dp"
                android:top="3dp"
                android:left="1.5dp">
                <rotate
                    android:fromDegrees="-45">
                    <shape android:shape="rectangle">
                        <solid android:color="#fff"/>
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>

</selector>